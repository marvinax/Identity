html(lang="en")
	head
		meta(charset="utf-8")
		title('Deziner')
		meta(name="viewport", content="width=device-width, initial-scale=1")
		//- link(href='http://www.youziku.com/webfont/NameCSS/46993', rel='stylesheet', type='text/css')
		link(rel="stylesheet", href="./stylesheets/style.css")
		link(rel="stylesheet", href="./stylesheets/bootstrap.min.css")
		link(rel="stylesheet", href='./stylesheets/fileinput.min.css')

	body
		section#home.container-fluid
			div.jumbotron
				div.text-center.css46993.logo Idenator

			div.row
				div.top.col-md-4.col-sm-6.text-center: div#qr.btn.btn-primary.btn-lg(target="qrgen")
					i.glyphicon.glyphicon-qrcode
					|   生成新二维码
				div.top.col-md-4.col-sm-6.text-center: div#upload-orig.btn.btn-primary.btn-lg(target="upload-original-page")
					i.glyphicon.glyphicon-upload
					|   上传原始图像
				div.top.col-md-4.col-sm-6.text-center: div#upload-test.btn.btn-primary.btn-lg(target="upload-test-page")
					i.glyphicon.glyphicon-camera
					|   拍摄照片验证

		section#qrgen.container-fluid
			div.row
				div.col-md-4.col-sm-6.text-center
					canvas#drawingArea.drawingArea
					p 生成标签预览
				div.col-md-4.col-sm-6
					h1: b 录入信息及生成二维码
					hr
					p 以下内容会建立在数据库中
					p: input#title.form-control(type="text", placeholder="书名")
					p: input#isbn.form-control(type="text", placeholder="ISBN")
					p: input#author.form-control(type="text", placeholder="作者")
					p: input#edition.form-control(type="text", placeholder="版次")
					p: input#print.form-control(type="text", placeholder="印次")
					p: input#amount.form-control(type="text", placeholder="印数")
					hr
					p 以下内容与生成二维码有关
					div.input-group
						input#copies.form-control(type="text", placeholder="请输入您想要的标签数量")
						span.input-group-btn
							div#generate-qr.btn.btn-primary.btn
								| 下载标签
					p: p 为您生成的标签会以压缩包的形式下载，标签中的二维码是由一个随机字符串和标签序号生成的

					input#upload-sheet.file-loading(type="file", multiple=false)

			div#qrcode.qrcode(style='{display:invisible;}')


		section#upload-original-page.container-fluid
			div.row
				div.col-md-4.col-sm-6.text-center
				div.col-md-4.col-sm-6
					h1: b 上传扫描标签原件
					hr
					input#upload-original.file-loading(type="file", multiple=true)
					p
					textarea#original-result.form-control(rows="15")

		section#upload-test-page.container-fluid
			div.row
				div.col-md-4.col-sm-6.text-center
				div.col-md-4.col-sm-6
					h1: b 上传拍摄标签
					hr
					input#upload-tobetest.file-loading(type="file", multiple=false)
					p
					textarea#test-info.form-control(rows="10")
					p
					div#test-result


	script(src="./javascripts/vendors/jquery-2.1.3.min.js")
	//- script(src="./javascripts/vendors/bootstrap.min.js")
	script(src="./javascripts/vendors/qrcode.min.js")
	//- script(src="./javascripts/vendors/fileinput.min.js")
	//- script(src="./javascripts/main.js")
	script(src="./javascripts/app.js")